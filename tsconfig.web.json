{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "unplugin-vue-macros/macros-global"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "typings/env.d.ts",
    "typings/components.d.ts",
    "typings/element-plus.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}