{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "paths": {
      //路径映射，配合vite配置的resolve.alias相关联别名使用
      "@/*": [
        "./.vitepress/*"
      ],
      "~/*": [
        "./.vitepress/vitepress/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "jsx": "preserve"
  },
  "include": [
    "**/*",
    ".vitepress/**/*",
    "../typings/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}